<!-- <h2>{username}'s Wishlist</h2>  Need api route if we want to display an interactive subtitle-->
<h2>Your Wishlist</h2>
 <div class="row">
            {{#if items.length}}
                {{#each items}}
                <div class="col-md-4 mb-4 d-flex justify-content-center">
                    <div class="card" style="max-width: 400px; max-height: auto  text-truncate">
                        <img src="{{#if this.item_img.length}}{{this.item_img}}{{else}}/resources/img/cartoon_outfit.jpeg{{/if}}" class="card-img-top" alt="{{this.name}}" <!--style="max-width: 200px; max-height: 400"-->>
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">
                               <!-- Based on api, might be able to add description tags -->
                               <!-- Add a description of the item in the card text -->
                                {{#if this.description}}
                                    Description: {{this.description}}
                                {{else}}
                                    No outfit description.
                                {{/if}}
                            </p>
                            <!-- Wishlist button -->
                            <button class="btn btn-outline-warning" style="border: none; background: none;" id="removeWishlistItem" data-outfit-id="{{this.id}}">
                                <span class="bi bi-star-fill" style="color: orange;"></span>
                                Remove from Wishlist
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <p>No items found.</p>
            {{/if}}

<!DOCTYPE html>
<html lang="eng">
    <head>
        {{> header}}
    </head>
    <body>
        <! Search button >
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
        </div>
        <! Display cards >
        <! Outline from events lab, will update with table data>
        {{#each clothing_items}}
        <div class="col mb-4">
            <div class="card" id="{{this.item_id}}">
                <img src="{{this.item_img}}" class="card-img-top" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">A classy tuxedo for a formal occasion.</p>
                    <! Wishlist button>
                    <button class="btn btn-secondary" data-outfit-id="{{this.id}}" data-outfit-name="{{this.name}}" data-outfit-description="{{this.description}}">
                        Add to Wishlist
                    </button>
                </div>
            </div>
        </div>
        {{/each}}

        <div class="col mb-4">
              <div class="card" id="example-card">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSDQU9KOaoe_-6N3AKh4SbGKEicKvuCU-YTgA&s" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">Tuxedo</h5>
                  <p class="card-text">A classy tuxedo for a formal occasion.</p>
                  <! Wishlist button>
                    <button class="btn btn-secondary" data-outfit-id="{{this.id}}" data-outfit-name="{{this.name}}" data-outfit-description="{{this.description}}">
                        Add to Wishlist
                    </button>
                </div>
              </div>
            </div>
        <div class="row">
            {{#if items.length}}
                {{#each items}}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{#if this.item_img.length}}{{this.item_img}}{{else}}/resources/img/cartoon_outfit.jpeg{{/if}}" class="card-img-top" alt="{{this.name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">
                                <! Based on api, might be able to add description tags>
                                <! Add a description of the item in the card text>
                                {{#if this.description}}
                                    Description: {{this.description}}
                                {{else}}
                                    No outfit description.
                                {{/if}}
                            </p>
                            <! Wishlist button>
                            <button class="btn btn-secondary" data-outfit-id="{{this.id}}" data-outfit-name="{{this.name}}" data-outfit-description="{{this.description}}">
                                Add to Wishlist
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <p>No items found.</p>
            {{/if}}
        </div>